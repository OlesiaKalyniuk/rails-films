<p id="notice"><%= notice %></p>

<h1>Films</h1>
<nav class="navbar navbar-dark bg-dark">
  <form class="form-inline">
    <button class="btn btn-sm btn-outline-secondary" type="button"><%= link_to "Shows", '/shows' %></button>
    <button class="btn btn-sm btn-outline-secondary" type="button"><%= link_to "Actors", '/actors' %></button>
  </form>
</nav>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.actor.first_name %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %>
