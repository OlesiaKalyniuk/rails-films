<p id="notice"><%= notice %></p>

<h1>Shows</h1>
<nav class="navbar navbar-dark bg-dark">
  <form class="form-inline">
    <button class="btn btn-sm btn-outline-secondary" type="button"><%= link_to "Films", '/films' %></button>
    <button class="btn btn-sm btn-outline-secondary" type="button"><%= link_to "Actors", '/actors' %></button>
  </form>
</nav>
<table>
  <thead>
    <tr>
      <th>Show time</th>
      <th>Film</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.show_time %></td>
        <td><%= show.film.title %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path %>
